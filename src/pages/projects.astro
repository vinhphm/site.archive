---
import { Card } from '@/components/Card'
import LinkIcon from '@/components/LinkIcon.astro'
import logoVinhDev from '@/assets/images/logos/vinh-dev.svg'
import logoVinhDevLegacy from '@/assets/images/logos/vinh-dev-legacy.svg'
import logoVPaste from '@/assets/images/logos/v-paste.svg'
import Layout from '@/layouts/Simple.astro'
import { SITE } from '@/config'

interface Project {
  name: string
  description: string
  link: { href: string; label: string }
  logo: any
}

const projects: Project[] = [
  {
    name: 'Vinh.Dev',
    description:
      'My personal website to share things out with the world, built with Next.js and Tailwind CSS.',
    link: { href: 'https://vinh.dev', label: 'vinh.dev' },
    logo: logoVinhDev,
  },
  {
    name: 'Legacy Vinh.Dev',
    description:
      'Previous version of this website with a different look and feel. This is also the first version I use Next.js and Tailwind CSS.',
    link: {
      href: 'https://vinh-dev-legacy.vercel.app',
      label: 'vinh-dev-legacy.vercel.app',
    },
    logo: logoVinhDevLegacy,
  },
  {
    name: 'Paste',
    description:
      'A minimal plain text storage service powered by Fresh framework, Deno, and Supabase.',
    link: { href: 'https://paste.vinh.dev', label: 'paste.vinh.dev' },
    logo: logoVPaste,
  },
]
---

<Layout
  title={`Projects - ${SITE.title}`}
  description="My creative endeavors, and a journey of making an impact"
>
  <Fragment slot="title">
    My creative endeavors, and a journey of making an impact.
  </Fragment>

  <Fragment slot="intro">
    I’ve worked on tons of little projects over the years but these are the ones
    that I’m most proud of.
  </Fragment>

  <ul
    role="list"
    class="grid grid-cols-1 gap-x-12 gap-y-16 sm:grid-cols-2 lg:grid-cols-3"
  >
    {
      projects.map(project => (
        <Card as="li">
          <div class="relative z-10 flex h-12 w-12 items-center justify-center rounded-full bg-white shadow-md shadow-zinc-800/5 ring-1 ring-zinc-900/5 dark:border dark:border-zinc-700/50 dark:bg-zinc-800 dark:ring-0">
            <img
              alt=""
              class="h-8 w-8 rounded-full bg-white"
              src={project.logo.src}
            />
          </div>
          <h2 class="mt-6 text-base font-semibold text-zinc-800 dark:text-zinc-100">
            <Card.Link href={project.link.href} target="_blank" rel="noopener">
              {project.name}
            </Card.Link>
          </h2>
          <Card.Description>{project.description}</Card.Description>
          <p class="relative z-10 mt-6 flex text-sm font-medium text-zinc-400 transition group-hover:text-aquamarine-500 dark:text-zinc-200">
            <LinkIcon className="h-6 w-6 flex-none" />
            <span class="ml-2">{project.link.label}</span>
          </p>
        </Card>
      ))
    }
  </ul>
</Layout>
