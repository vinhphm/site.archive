---
import { workData } from './data'
import BaseLayout from '@/layouts/BaseLayout.astro'
import ListWorks from '@/components/ListWorks.astro'
---

<BaseLayout
  title="Works"
  description="My creative endeavors, and a journey of making an impact"
>
  <h1 class="mb-10 text-title">Works</h1>
  <div mb-16 sm:mb-24>
    {
      workData.length > 0 && (
        <div>
          {workData.map((i) => (
            <div mb-10>
              <h2 class="select-none relative h20 pointer-events-none">
                <span class="text-3.2em leading-none color-transparent font-bold text-stroke-1.5 text-stroke-hex-aaa op35 dark:op20 absolute top-0">
                  {i.title}
                </span>
              </h2>
              <ListWorks list={i.works} />
            </div>
          ))}
        </div>
      )
    }
  </div>
</BaseLayout>
